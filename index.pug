doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    //  displays site properly based on user's device 
    link(rel='icon' type='image/png' sizes='32x32' href='./images/favicon-32x32.png')
    link(rel="stylesheet", href="style.css")
    title Frontend Mentor | E-commerce product page
    //  Feel free to remove these styles or customise in your own stylesheet üëç 
    style
      .attribution { font-size: 11px; text-align: center; }
      .attribution a { color: hsl(228, 45%, 44%); }
      
  body

    header
      nav 
        .logo 
          img(src="./images/logo.svg", alt="sneakers logo")
        ul
          li
            a(href="#") Collection
          li
            a(href="#") Men
          li
            a(href="#") Women
          li
            a(href="#") About
          li
            a(href="#") Contacts
        .cart-profile
          img(src="./images/icon-cart.svg", alt="shopping cart icon").cart
          img(src="./images/image-avatar.png", alt="user avatar").profile

    main 
      .product-img
        .body-overlay
        .product-img-detail
          ul
            li(data-active-image)
              img(src="./images/image-product-1.jpg", alt="sneaker picture #1")
            li
              img(src="./images/image-product-2.jpg", alt="sneaker picture #2")
            li
              img(src="./images/image-product-3.jpg", alt="sneaker picture #3")
            li
              img(src="./images/image-product-4.jpg", alt="sneaker picture #4")
            li(data-button-next)
              img(src="./images/icon-next.svg", alt="icon-next")
            li(data-button-prev)
              img(src="./images/icon-previous.svg", alt="icon-prev")
        .product-img-variation
          ul
            li(data-active-overlay)
              img(src="./images/image-product-1-thumbnail.jpg", alt="sneaker picture #1 thumbnail")
            li 
              img(src="./images/image-product-2-thumbnail.jpg", alt="sneaker picture #2 thumbnail")
            li
              img(src="./images/image-product-3-thumbnail.jpg", alt="sneaker picture #3 thumbnail")
            li
              img(src="./images/image-product-4-thumbnail.jpg", alt="sneaker picture #4 thumbnail")
      .product-detail
        h3.product-detail-maker SNEAKER COMPANY
        h4.product-detail-tittle Fall Limited Edition Sneakers
        p.product-detail-description These low-profile sneakers are your perfect casual wear companion. Featuring a durable rubber outer sole, they‚Äôll withstand everything the weather can offer.
        .product-detail-price 
          .current-price $125.00 
          .discount 50% 
          .previous-price <del>$250.00</del>
        .product-detail-sale
          .product-detail-sale-qtty
            button#cart-decrement -
            input(type="number" name="quantity" min="0" value="0" readonly)#cart-input
            button#cart-increment +
          .product-detail-sale-addtocart 
            //img(src="./images/icon-cart.svg", alt="shopping cart icon")
            button Add to cart
        h5 * For more than 10 pairs, contact the nearest shop to get further discount.
        

  script(src="script.js" defer) 